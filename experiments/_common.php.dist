function _tidyXml ($xml)
{
    $tidy = new \tidy();
    $xml = $tidy->repairString($xml, array(
        'output-xml' => true, 
        'input-xml' => true, 
        'indent' => true, 
        'indent-spaces' => 4, 
        'indent-attributes' => true, 
        'wrap' => 100
    ));
    
    return $xml;
}


function _dump ($value)
{
    error_log(print_r($value, true));
}


function _dumpx ($value)
{
    _dump(_tidyXml($value));
}